<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to "", root_path, class: "fas fa-vihara  navbar-brand" %>
      <%= link_to "KEIKOBA", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link fas fa-crown fa-lg" href="#"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link fas fa-book-open fa-lg" href="#"></a>
          </li>
          <li class="nav-item">
            <%= link_to "", users_path, class: "nav-link fas fa-users fa-lg" %>
          </li>
          <li class="nav-item">
            <i class="nav-link fas fa-search fa-lg disabled"></i>
          </li>
          <li class="nav-item">
            <form>
              <input class="form-control me-2" type="search" placeholder="検索..." aria-label="Search">
            </form>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if logged_in? %>
            <li class="nav-item">
              <a class="nav-link fas fa-bell fa-lg text-secondary" href="#"></a>
            </li>
            <li class="nav-item">
              <a class="nav-link fas fa-edit fa-lg text-secondary" href="#"></a>
            </li>
            <li class="nav-item dropdown dropstart">
              <a class="nav-link fas fa-user fa-lg text-secondary" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"></a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "アカウント設定", edit_user_path(current_user), class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "ホーム", current_user, class: "dropdown-item" %>
                <a class="dropdown-item" href="#">コメント一覧</a>
                <a class="dropdown-item" href="#">お気に入り一覧</a>
                <a class="dropdown-item" href="#">ブックマーク一覧</a>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% elsif current_page?(login_path) %>
            <%= link_to "新規登録はこちら", signup_path, class: "text-secondary", style: "text-decoration: none" %>
          <% elsif current_page?(signup_path) %>
            <%= link_to "ログインはこちら", login_path, class: "text-secondary", style: "text-decoration: none" %>
          <% else %>
            <%= link_to "ログイン", login_path, class: "btn btn-light me-2" %>
            <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
