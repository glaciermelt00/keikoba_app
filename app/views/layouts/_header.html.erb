<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top">
    <div class="container-fluid">
      <%= link_to "", root_path, class: "fas fa-vihara  navbar-brand" %>
      <%= link_to "KEIKOBA", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link fas fa-crown fa-lg" href="#"></a>
          </li>
          <li class="nav-item">
            <a class="nav-link fas fa-book-open fa-lg" href="#"></a>
          </li>
          <li class="nav-item">
            <%= link_to "", users_path, class: "nav-link fas fa-users fa-lg" %>
          </li>
        </ul>
        <% if !current_page?(login_path) && !current_page?(signup_path) %>
          <div class="d-flex ms-auto me-3 input-group">
            <input class="form-control" type="search" placeholder="施設名, 住所, ..." aria-label="Search" aria-describedby="button-addon1">
            <button class="btn btn-outline-success" type="submit" id="button-addon1">
              <span class="fas fa-search fa-lg"></span>
            </button>
          </div>
        <ul class="navbar-nav">
        <% else %>
        <ul class="navbar-nav ms-auto">
        <% end %>
          <% if logged_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link fas fa-user fa-lg text-secondary dropdown-toggle" href="#" role="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false"></a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to "アカウント設定", edit_user_path(current_user), class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "ホーム", current_user, class: "dropdown-item" %></li>
                <li><a class="dropdown-item" href="#">コメント一覧</a></li>
                <li><a class="dropdown-item" href="#">お気に入り一覧</a></li>
                <li><a class="dropdown-item" href="#">ブックマーク一覧</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link fas fa-bell fa-lg text-secondary" href="#"></a>
            </li>
            <li class="nav-item">
              <%= link_to "", new_post_path, class: "nav-link fas fa-edit fa-lg text-secondary" %>
            </li>
            <li class="px-2"></li>
          <% elsif current_page?(login_path) %>
            <%= link_to "新規登録はこちら", signup_path, class: "text-secondary", style: "text-decoration: none" %>
          <% elsif current_page?(signup_path) %>
            <%= link_to "ログインはこちら", login_path, class: "text-secondary", style: "text-decoration: none" %>
          <% else %>
            <%= link_to "ログイン", login_path, class: "btn btn-light me-2" %>
            <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>