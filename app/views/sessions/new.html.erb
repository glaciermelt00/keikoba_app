<% provide(:title, "ログイン") %>
<div class="login-form">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <h2 class="text-center">ログインする</h2>       
    <div class="form-group login-input">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", placeholder: "mail@keikoba.com" %>
    </div>
    <div class="form-group login-input">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", placeholder: "******" %>
    </div>
    <div class="clearfix">
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保持する</span>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit "ログイン", class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>