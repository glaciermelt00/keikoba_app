<% provide(:title, "パスワード再設定") %>
<div class="login-form">
  <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>
    <h2 class="text-center">パスワード再設定</h2>       
    <div class="form-group login-input">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", placeholder: "" %>
    </div>
    <div class="form-group mt-3">
      <%= f.submit "送信", class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>