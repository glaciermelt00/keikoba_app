<% provide(:title, "新しいパスワードを設定") %>
<div class="login-form">
  <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
    <h2 class="text-center">新しいパスワードを設定</h2>
    <%= render 'shared/error_messages' %>

    <%= hidden_field_tag :email, @user.email %>
    
    <div class="form-group login-input">
      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password, class: "form-control", placeholder: "" %>
    </div>
    <div class="form-group login-input">
      <%= f.label :password_confirmation, "新しいパスワードの再入力" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "" %>
    </div>
    <div class="form-group mt-3">
      <%= f.submit "送信", class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>