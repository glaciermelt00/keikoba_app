<div class="col">
  <div class="card" style="width: 21rem;" id="post-<%= post.id %>">
    <div class="card-img-top">
      <% if post.images.attached? %>
        <%= image_tag post.display_image, class: "img-fluid" %>
      <% else %>
        <img src="" class="" alt="">
      <% end %>
    </div>
    <div class="card-body">
      <div class="card-title">
        <%= link_to post.name, post, class: "h5 text-dark", style: "text-decoration: none" %>
      </div>
      <div class="pt-3 row">
        <div class="col-2">
          <%= link_to gravatar_for(post.user, size: 50), post.user %>
        </div>
        <div class="col">
          <%= link_to post.user.name, post.user %>
          <p class="text-secondary"><%= time_ago_in_words(post.created_at) %>Ââç</p>
        </div>
      </div>
    </div>
  </div>
</div>
