<header class="mt-5">
  <div class="container flex-container">
    <div class="row">
      <div class="col-12">
        <h2><%= @post.name %></h2>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-6">
        <%= render 'shared/favorites', post: @post %>
        <span class="px-3"><span>
        <%= render 'shared/bookmarks', post: @post %>
      </div>
      <% if @post.user_id == current_user.id %>
        <div class="col-6 text-end">
          <%= link_to "編集する", edit_post_path(@post), class: "btn btn-primary" %>
          <%= link_to "削除する", @post, method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
    <div class="row mt-3">
      <div class="col">
        <%= gravatar_for @post.user, size: 24 %>
        <%= @post.user.name %>
      </div>
    </div>
  </div>
</header>