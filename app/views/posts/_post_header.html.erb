<header class="mt-5">
  <div class="container flex-container">
    <div class="row">
      <div class="col-8">
        <h2><%= @post.name %></h2>
      </div>
      <% if @post.user_id == current_user.id %>
        <div class="col-4">
          <%= link_to "編集する", edit_post_path(@post), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="row mt-3">
      <div class="col-12">
        <%= render 'shared/favorites', post: @post %>
        <span class="px-3"><span>
        <%= render 'shared/bookmarks', post: @post %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <%= gravatar_for @post.user, size: 24 %>
        <%= @post.user.name %>
      </div>
    </div>
  </div>
</header>