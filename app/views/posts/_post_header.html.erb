    <div class="row">
      <div class="col-8">
        <h2><%= @post.name %></h2>
      </div>
      <div class="col">
        <button type="button" class="btn btn-primary">編集する</button>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3">
        <span>お気に入り XX</span>
      </div>
      <div class="col-3">
        <span>ブックマーク XX</span>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <%= gravatar_for @post.user, size: 24 %>
