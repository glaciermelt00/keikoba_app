<% provide(:title, "アカウント設定") %>
<h1 class="mt-5 text-center">アカウント設定</h1>
<div class="signup-form">
  <%= form_with(model: @user, local: true, class: "form-horizontal") do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mx-auto mb-2", style="width: 110px;" >
      <a href="#" target="_blank" rel="noopener" class="fas fa-user-circle fa-7x" style="text-decoration: none;"></a>
    </div>
    <div class="form-group row">
      <div class="col-form-label col-4">
        <%= f.label :name, "アカウント名"%>
      </div>
      <div class="col-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>  	
    </div>
    <div class="form-group row">
      <div class="col-form-label col-4">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-8">
        <%= f.email_field :email, class: "form-control" %>
      </div>  	
      </div>
      <div class="form-group row">
        <div class="col-form-label col-4">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, class: "form-control", placeholder: "6文字以上" %>
        </div>  	
      </div>
      <div class="form-group row">
        <div class="col-form-label col-4">
          <%= f.label :password_confirmation, "パスワード再入力" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "" %>
        </div>  	
      </div>
      <div class="form-group row">
        <div class="col-8 offset-4">
          <%= f.submit "変更する", class: "btn btn-primary btn-lg" %>
        </div>  
      </div>
    </div>
  <% end %>
</div>